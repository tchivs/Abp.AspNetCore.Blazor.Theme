<Project Sdk="Microsoft.NET.Sdk.Web">

    <Import Project="..\..\common.props" />

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
        <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
        <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
        <PreserveCompilationContext>true</PreserveCompilationContext>
        <MvcRazorExcludeRefAssembliesFromPublish>false</MvcRazorExcludeRefAssembliesFromPublish>
        <PreserveCompilationReferences>true</PreserveCompilationReferences>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Serilog.AspNetCore" Version="4.1.0" />
        <PackageReference Include="Serilog.Sinks.Async" Version="1.4.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\src\DemoApp.Application\DemoApp.Application.csproj" />
        <PackageReference Include="Volo.Abp.AspNetCore.Mvc.UI.Theme.Basic" Version="4.4.4" />
        <PackageReference Include="Volo.Abp.Autofac" Version="4.4.4" />
        <PackageReference Include="Volo.Abp.Swashbuckle" Version="4.4.4" />
        <PackageReference Include="Volo.Abp.AspNetCore.Serilog" Version="4.4.4" />
<!--        <PackageReference Include="Volo.Abp.Caching.StackExchangeRedis" Version="4.4.4" />-->
        <PackageReference Include="Volo.Abp.AspNetCore.Authentication.OpenIdConnect" Version="4.4.4" />
        <PackageReference Include="Volo.Abp.AspNetCore.Mvc.Client" Version="4.4.4" />
        <PackageReference Include="Volo.Abp.AspNetCore.Authentication.OAuth" Version="4.4.4" />
        <PackageReference Include="Volo.Abp.Http.Client.IdentityModel.Web" Version="4.4.4" />
        <PackageReference Include="Volo.Abp.PermissionManagement.HttpApi.Client" Version="4.4.4" />
        <PackageReference Include="Volo.Abp.Identity.HttpApi.Client" Version="4.4.4" />
        <PackageReference Include="Volo.Abp.TenantManagement.HttpApi.Client" Version="4.4.4" />
        <PackageReference Include="Volo.Abp.FeatureManagement.HttpApi.Client" Version="4.4.4" />
  
        
        <ProjectReference Include="..\..\src\DemoApp.Blazor.Server\DemoApp.Blazor.Server.csproj" />
        <ProjectReference Include="..\..\src\DemoApp.HttpApi.Client\DemoApp.HttpApi.Client.csproj" />
        <ProjectReference Include="..\DemoApp.Host.Shared\DemoApp.Host.Shared.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="Logs\**" />
        <Content Remove="Logs\**" />
        <EmbeddedResource Remove="Logs\**" />
        <None Remove="Logs\**" />
    </ItemGroup>

    <ItemGroup>
        <None Update="Pages\**\*.js">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Pages\**\*.css">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
