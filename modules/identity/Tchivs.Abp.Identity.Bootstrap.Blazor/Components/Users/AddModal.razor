@using Volo.Abp.Identity.Localization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components
@inherits BootstrapBlazorComponentBase
<div class="row g-3 form-inline">
    <div class="col-12">
        <BootstrapInput @bind-Value="@Context.UserName" placeholder="请输入用户名" DisplayText=@L["UserName"] maxlength="50"> </BootstrapInput>
    </div>
    <div class="col-12">
        <BootstrapInput type="password" @bind-Value="@Context.Password" placeholder="不可为空，50字以内" DisplayText=@L["Password"] maxlength="50"> </BootstrapInput>
    </div>
    <div class="col-12">
        <BootstrapInput type="email" @bind-Value="@Context.Email" placeholder="不可为空，50字以内" maxlength="50" DisplayText=@L["EmailAddress"]> </BootstrapInput>
    </div>
    <div class="col-12">
        <BootstrapInput type="number" @bind-Value="@Context.PhoneNumber" placeholder="不可为空，50字以内" maxlength="11" DisplayText=@L["PhoneNumber"]> </BootstrapInput>
    </div>
    <div class="col-12">
        <MultiSelect DisplayText=@L["Roles"]
                     Items="@Roles" @bind-Value="@Context.RoleNames">
        </MultiSelect>
    </div>
    <div class="col-12">
        <Checkbox @bind-Value="@Context.LockoutEnabled"
                  ShowAfterLabel="true"
                  ShowLabel="false"
                  DisplayText=@L["DisplayName:LockoutEnabled"]>
        </Checkbox>
    </div>
</div>