
@inject NavigationManager NavigationManager
@inject ThemeService ThemeService

@namespace Tc.Abp.AspNetCore.Components
<link href="@Href" rel="stylesheet" />

@code {
    bool IsPremiumTheme => ThemeService.CurrentTheme == "fluent" || ThemeService.CurrentTheme == "material-dark";

    string Href => IsPremiumTheme ? $"/_content/Tc.Abp.AspNetCore.UI.Radzen/css/{ThemeService.CurrentTheme}-base.css" : $"_content/Radzen.Blazor/css/{ThemeService.CurrentTheme}-base.css";

    protected override void OnInitialized()
    {
        ThemeService.Initialize(NavigationManager);
    }
}