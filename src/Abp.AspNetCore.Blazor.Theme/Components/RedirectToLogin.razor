@using Microsoft.JSInterop
@inject NavigationManager _navigation
@inject IJSRuntime _jsRuntime
@namespace Abp.AspNetCore.Blazor.Theme
@code { 
    protected override void OnInitialized()
    {
        bool isWebAssembly = _jsRuntime is IJSInProcessRuntime;
        if (isWebAssembly)
        {
            _navigation.NavigateTo($"authentication/login?returnUrl={Uri.EscapeDataString(_navigation.Uri)}");
        }
        else
        {
            _navigation.NavigateTo($"account/login?returnUrl={Uri.EscapeDataString(_navigation.Uri)}", true);
        }
    } 
}
